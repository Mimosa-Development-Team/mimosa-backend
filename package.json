{
  "name": "node-api-boilerplate",
  "version": "2.0.0",
  "description": "Node Backend API Boilerplate",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon ./index.js",
    "start": "node ./index.js",
    "test": "NODE_ENV=testjest",
    "db:refresh": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "db:refresh-test": "sequelize db:migrate:undo:all --env test && sequelize db:migrate --env test",
    "fresh-install": "rm -rf node_modules && npm cache clean && yarn",
    "migrate": "sequelize db:migrate",
    "migrate:test": "sequelize db:migrate --env test",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "seed": "sequelize db:seed:all",
    "seed:test": "sequelize db:seed:all --env test",
    "db:refresh-sp": "yarn migrate:sp:undo && yarn migrate:sp",
    "migrate:sp": "cross-env NODE_ENV=development sequelize db:migrate --migrations-path=./src/database/sp/functions",
    "migrate:sp:undo": "./cli/sequelize_undo_migration.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "check-db": "lib/check-db.js",
    "lefthook": "lefthook"
  },
  "author": "Benison B Bolanos <benz.bolanos@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "ajv": "^7.0.4",
    "ajv-formats": "^1.5.1",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.2",
    "jwt-decode": "^3.1.2",
    "mailcomposer": "^4.0.2",
    "mailgun": "^0.5.0",
    "mailgun-js": "^0.22.0",
    "morgan": "^1.10.0",
    "normalize-port": "^1.0.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.5.0",
    "sequelize-hierarchy": "^2.0.4",
    "sequelize-hierarchy-fork": "^1.0.0",
    "swagger-jsdoc": "6.0.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "draxt": "^1.0.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "nodemon": "^2.0.7",
    "recursive-iterator": "^3.3.0",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "swagger-parser": "^10.0.2",
    "yargs": "^16.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "./test/.*.test.js$",
    "rootDir": ".",
    "setupFiles": [
      "./test/test_files/common.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/offshorly/meditation-api.git"
  },
  "engines": {
    "node": ">=14.15.4"
  }
}
